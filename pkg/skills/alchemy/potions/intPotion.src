use os;
use uo;
use util;
use cfgfile;
include ":alchemy:alchemy";
include ":timedScripts:timedScripts";

program drink_blue (who, potion)
	EraseObjProperty(who, "IsMeditating");
	EraseObjProperty(who, "HealTimer");
	if(!Accessible(who, potion))
		return;
	endif
	if(potion.movable == 0)
		SendSysMessage(who, "Voce nao pode beber isto.");
		return;
	endif

	if(!checkifcandrink(who, "int"))
		return;
	endif

	var bonus := GetObjProperty (potion, "bonus");
	bonus := PotionSpecialistBonus (who, bonus, BUFF);

	case(potion.objtype)
		48903:	TS_StartTimer(who, "intelligence", (360+bonus*10), Cint(10+bonus)); 
		48904: TS_StartTimer(who, "intelligence", (600+bonus*10), Cint(15+bonus)); 
	endcase
	empty_bottle(who, potion);
endprogram
