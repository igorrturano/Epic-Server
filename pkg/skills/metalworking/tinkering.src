program use_TinkerTool(who, tool)

	if (!Accessible (who, tool) )
		SendSysMessage (who, "Você não alcança aquilo!");
		return;
	endif

	if (!ReserveItem (tool) )
		SendSysMessage (who, "você não pode usar isso agora.");
		return;
	endif

	FabricaItensComplexos(who,"Tinkering");

endprogram

function SetupGemName(item, gems)

	foreach gem in (gems.keys())
		SetName(item, item.desc + " [" + gems[gem] + "]" + " " + cstr(gem));
	endforeach

endfunction

