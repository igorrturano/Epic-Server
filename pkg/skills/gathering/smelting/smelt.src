function SmeltOre(who, item, ore, qtd)

	if(!ReserveItem(ore))
		return;
	endif
	if(!Accessible(who, ore))
		SendSysMessage(who,"Voce nao alcanca isto.", FONT_NORMAL, 40);
		return;
	endif

	var dif := DetermineMiningDifficulty(ore.objtype);
	var ingot := ConvertOreToIngot(ore.objtype);
	print ("ore.objtype: " + Hex(ore.objtype));

	if (!ingot && ore.objtype != 0x1bde) //ADICIONADO CARVÃO AQUI, POR ORA
		SendSysMessageEx(who,"Voce nao pode derreter isto.", FONT_NORMAL, 40);
		return 1;
	endif

	if (GetObjProperty(item, "numMetal"))
		var num := CINT(GetObjProperty(item, "amt1"));
		var nummetal := Cint(GetObjProperty(item, "numMetal"));

		if (GetObjProperty(item, "oreObj1") == ConvertOreToIngot(ore.objtype))
			if (!GetObjProperty(item, "oreObj2"))
				SendSysMessageEx(who, "Você adicionou mais do mesmo minério.", FONT_NORMAL, 90);
				PlaySoundEffect(who, 0x22);
				Sleep(4);
				var amt := CInt(GetObjProperty(item, "amt1"));
				//amt += ore.amount;
				amt += qtd;
				SetObjProperty(item, "amt1", amt);
				DebugMsg(who, DEBUG_NAME_SMELTING, "Agora tem " + amt);
				//DestroyItem(ore);
				SubtractAmount(ore, CInt(qtd));
			else
				SendSysMessageEx(who, "Resfrie a liga atual antes de tentar fazer uma nova com essa combinação.", FONT_NORMAL, 40);
				return;
			endif
		else
			if (num != ore.amount)
				SendSysMessageEx(who, "Voce precisa colocar " + num + " minerios aqui.", FONT_NORMAL, 40);
				return;
			endif
			if(SkillCheck(who, GATHERING, dif, 0) > 0)
				SendSysMessageEx(who, "Voce fez a fusao entre os metais.", FONT_NORMAL, 90);
				PlaySoundEffect(who, 0x22);
				Sleep(4);
				SetObjProperty(item, "numMetal", nummetal+1);
				//SetObjProperty(item, "amt"+(nummetal+1), ore.amount);
				SetObjProperty(item, "amt"+(nummetal+1), qtd);
				SetObjProperty(item, "oreObj"+(nummetal+1), ingot);
				//DestroyItem(ore);
				SubtractAmount(ore, CInt(qtd));
			else
				var perdamt := RandomInt(3)+1;
				/* if (perdamt > ore.amount)
					perdamt := ore.amount;
				endif */
				if (perdamt > qtd)
					perdamt := qtd;
				endif
				SubtractAmount(ore, perdamt);
				SendSysMessageEx(who, "Voce perdeu parte dos minerios.", FONT_NORMAL, SSM_FAIL);
				return;
			endif
		endif
	else
		if(SkillCheck(who, GATHERING, dif, ((dif / 2) + 10)) > 0)
			SendSysMessageEx(who, "Voce derreteu o minerio e retirou as impurezas.", FONT_NORMAL, 90);
			PlaySoundEffect(who, 0x22);
			Sleep(4);
			item.color := 0x486;
			SetObjProperty(item, "numMetal", 1);
			SetObjProperty(item, "oreObj1", ingot);
			//SetObjProperty(item, "amt1", ore.amount);
			SetObjProperty(item, "amt1", qtd);
			//DestroyItem(ore);
			SubtractAmount(ore, CInt(qtd));
		else
			var perdamt := RandomInt(3)+1;
			/* if (perdamt > ore.amount)
				perdamt := ore.amount;
			endif */
			if (perdamt > qtd)
				perdamt := qtd;
			endif
			SubtractAmount(ore, perdamt);
			SendSysMessageEx(who, "Voce perdeu parte dos minerios.", FONT_NORMAL, SSM_FAIL);
			return;
		endif
	endif
endfunction

function OpenSmeltGump(who, item)
	var GUMP_WIDTH := 395;
	var GUMP_HEIGHT := 565;
	var GUMP_BACKGROUND := 39929;
	var INTERNAL_BACKGROUND := 9350;
	var gump := GFECreateGump(400, 565, GUMP_BACKGROUND, "Menu de Smelting");

	var ores := getAllOres();
	var ableToSmelt := dictionary{};
	var indexAbleToSmelt := array{};
	var bag := EnumerateItemsInContainer(who.backpack);
	foreach ore in ores
		foreach item in bag
			if (item.objtype == ore.oreObjType)
				var amt := item.amount;
				var size := Len(ore.neededToCraft);
				var i := 0;

				foreach item2 in bag
					if (item2.objType in ore.neededToCraft)
						if (item2.amount < item.amount)
							amt := item2.amount;
						endif
						i++;
					endif
				endforeach
				
				if (i == size)
					indexAbleToSmelt.append(ore.oreObjType);
					ableToSmelt[ore.oreObjType] := struct{"item" := item, "ore" := ore, "amount" := amt};
				endif
			endif
		endforeach
	endforeach

	//TODO: Verificar se o player tem a skill necessária (adicionar no getAllOres())
	//TODO: Remover bug que ao derreter as ligas está usanado só 1 minério
	var x := 30;
	var y := 120;
	var y_space := 50;
	var btnID := 100;
	var tBoxAmt := Dictionary{};
	var options := array{};
	foreach ore in indexAbleToSmelt
		//Essa quantidade de vars pra poder burlar a falta de objeto e o bug em tratar atributo dentro de struct no foreach no POL, etc....
		var amt := ableToSmelt[ore].amount;
		var graphic := 0x1BF4; //TODO: MELHORAR ESSE GET
		var color := ableToSmelt[ore].ore.color;
		var ingotName := ableToSmelt[ore].ore.ingotName;
		var oreObjType := ableToSmelt[ore].ore.oreObjType;
		var objTypeNeededToCraft := ableToSmelt[ore].ore.neededToCraft;

		if (ableToSmelt[ore].ore.oreType == ORE_CHARCOAL)
			graphic := 0xDF9;
		endif

		GFAddButton(gump, x, y, 2151, 2154, GF_CLOSE_BTN, btnID);
		GFTilePic(gump, x + 30, y, graphic, color);
		GFTextLine(gump, x + 90, y + 5, color, ingotName);
		tBoxAmt[oreObjType] := GFEAddTextBox(gump, x + 200, y, 30, 15, COLOR_YELLOW, amt, 0, 4);
		options.append(struct{
			"btnID" := btnID,
			"oreObjType" := oreObjType
			});
		y += y_space;
		btnID++;
	endforeach

	var input;
	var toSmelt := struct{"item" := 0x0, "ore" := 0x0, "amount" := 0};
	while (1)
		input := GFSendGump(who, gump);
		if (input[0] == 1)
			return;
		else
			foreach option in options
				if (input[0] == option.btnID)
					toSmelt.amount := GFExtractData(input, tBoxAmt[option.oreObjType]);
					toSmelt.ore := ableToSmelt[option.oreObjType].ore;
					toSmelt.item := ableToSmelt[option.oreObjType].item;
					DebugMsg(who, DEBUG_NAME_SMELTING, "Item: " + toSmelt.item.name);
					DebugMsg(who, DEBUG_NAME_SMELTING, "Derrete: " + toSmelt.ore.oreName);
					DebugMsg(who, DEBUG_NAME_SMELTING, "Quantidade: " + toSmelt.amount);
				endif
			endforeach
			break;
		endif
	endwhile

	if (CheckForWater(who))
		if (toSmelt.oreType == ORE_MITHRIL) //Se for Mithril verificar SoulForge
			if (CheckForSoulForge(who))
				var materials := toSmelt.ore;
				SmeltOre(who, item, toSmelt.item, toSmelt.amount);
				SleepMS(500);
				EsfriarLiga(who, item);
			else
				SendSysMessageEx(who, "Você precisa estar perto da Forja das Almas para usar este item.", SSM_FAIL);
				return;
			endif
		else //Qualquer outro, pode ser qualquer forja
			if(CheckForForge(who))
				SmeltOre(who, item, toSmelt.item, toSmelt.amount);
				SleepMS(500);
				EsfriarLiga(who, item);
			else
				SendSysMessageEx(who, "Você precisa estar perto da forja para usar este item.", SSM_FAIL);
				return;
			endif
		endif
	else
		SendSysMessageEx(who, "Nenhuma fonte de água próxima encontrada.", SSM_FAIL);
	endif
endfunction
