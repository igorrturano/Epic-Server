
use os;

include ":fls_core:fls_characters";

program logon(who)

	start_script("seasonaleffects", {who});
	sleep(1);

	if (HaveReverseVision(who))
		if (who.cmdlevel > 1)
			SendSysMessage(who, "Ajustando infravision");
		endif
		ReverseLight(who);
	else
		who.setlightlevel(0, 2);
	endif

    destroyIllyraOutsideDungeons(who);
endprogram
