        SendSysMessageEX(who, "Voce precisa de " + custo + " cinzas de enxofre para o inicio", SSM_REQUEST);
		var targ := Target(who);

        if (!targ)
            SendSysMessageEX(who, "Cancelado.", SSM_FAIL);
            return;
        endif

