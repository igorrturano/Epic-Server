    use uo;
use os;

include ":spells:tnmagery";
include "include/client";
include "include/sounds";
include "include/say";
include ":timedScripts:timedScripts";
include "include/epicMageryUtils";

program SpellScript(params)
	var who := params[1];
	var info := params[2];
	params := 0; // No longer needed

	SendSysMessageEx(who, "Escolha o alvo.", SSM_REQUEST);
	var targ := Spell_Target(who, TGTOPT_CHECK_LOS);
	if (!targ)
		return;
	endif

	if (!targ.isa(POLCLASS_MOBILE))
		SendSysMessageEx(who, "Isto nao pode ser alvejado por essa magia.", SSM_FAIL);
		return;
	endif

	var amt := Cint(AP_GetSkill(who, MAGICLORE)*0.75);
	TS_StartTimer(targ, "weaken", GetSpellDuration(AP_GetSkill(who, MAGICLORE)), amt, who, 1); //20 min

	handleSilentMagic(who, targ, SFX_SPELL_WEAKEN);
	SendSysMessageEx(who, "Voce deixou o alvo mais fraco.", SSM_INFO);
	return 1;
endprogram 
