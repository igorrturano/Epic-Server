  GFGumpPic( book_gump, 310, 50, 58 );
  GFGumpPic( book_gump, 325, 50, 58 );
  GFGumpPic( book_gump, 340, 50, 58 );
  GFGumpPic( book_gump, 355, 50, 58 );
  GFGumpPic( book_gump, 370, 50, 58 );
  GFGumpPic( book_gump, 385, 50, 58 );
