use uo;
use os;

include ":spells:tnmagery";
include "include/client";
include "include/sounds";
include "include/say";
include ":timedScripts:timedScripts";
include ":charactercreation:resists";
include ":charactercreation:habilidades";

program SpellScript(params)
	var who := params[1];
	var targ := params[2];
	params := 0; // No longer needed

	if (!targ.isa(POLCLASS_MOBILE))
		SendSysMessageEx(who, "Isto nao pode ser alvejado por essa magia.", SSM_FAIL);
		return;
	endif

	var amt;
	if(TemHabilidade(who, "Vontade Esmagadora"))
		if (!CheckResist(targ, VONTADE, 70, -CInt(AP_GetSkill(who, MAGICLORE)/2.5))) // Muito mais Dif√≠cil de resistir
			amt := Cint(AP_GetSkill(who, MAGICLORE)*0.5);
		else
			amt := Cint(AP_GetSkill(who, MAGICLORE)*0.25);
		endif
	else
		if (!CheckResist(targ, VONTADE, 30, -CInt(AP_GetSkill(who, MAGICLORE)/2.5)))
			amt := Cint(AP_GetSkill(who, MAGICLORE)*0.5);
		else
			amt := Cint(AP_GetSkill(who, MAGICLORE)*0.25);
		endif
	endif

	if (temHabilidade(who, "Tocado por Asan"))
		if (isBloodied(who))
			amt := cint(amt*1.5);
		endif
	endif

	TS_StartTimer(targ, "clumsy", cint(AP_GetSkill(who, MAGICLORE)), amt, who, 1); //20 min
	if (!GetObjProperty(who, "#magiasilenciosa"))
        PlaySoundEffect(targ, SFX_SPELL_WEAKEN);
    endif
	SendSysMessageEx(who, "Voce deixou o alvo atrapalhado.", SSM_INFO);
	PrintTextAbovePrivate(targ, "-"+amt + " Dex", who, 3, 38);
	Corromper(who, 3, targ);

	if (GetObjProperty(who, "#magiasilenciosa"))
        SendSysMessageEx(who,  "O efeito da magia silenciosa acabou.", SSM_INFO);
    endif
    //Remove prop de magia silenciosa apos o cast ser completo
    EraseObjProperty(who, "#magiasilenciosa");

	return 1;
endprogram
