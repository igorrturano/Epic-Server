use uo;
use os;

include "include/say";


program speak(mobile)
	print("DEBUG: speaklastwords started for " + mobile.name + " [" + mobile.serial + "]");
	mobile.frozen := 1;
	var falas :=  GetObjProperty(mobile, "Ultimas Palavras");
	print("DEBUG: falas: " + falas);
	EraseObjProperty(mobile, "Ultimas Palavras");
	foreach fala in falas
		if (fala != error)
			PrintText(mobile, ""+ fala);
			sleepms(800);
		endif
	endforeach
	sleep(3);
	mobile.kill();		
endprogram
