//Custom events
const REVELADO_EVENT    := 0x78460;
const PICKPOCKET_EVENT  := 0x78459;
const LOCKPICK_EVENT    := 0x78455;
const CERCA_EVENT       := 0x78456;
const RESET_SETUP_EVENT := 0x78457;
