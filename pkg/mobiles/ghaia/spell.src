	//		default:
	//			RunToward( opponent );
	//			sleepms(sleepdelay);
	//			return 0;
	//	endcase
	//endif
	
	return 0;

endfunction

function look_around(spells)
  foreach npc in ListMobilesInLineOfSight(me, areasize)
    if( CanFight(me, npc, align) )
         SpellFight(npc, spells);
    endif
    sleepms(2);
  endforeach
endfunction
